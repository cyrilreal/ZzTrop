<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tvHeader"
        android:textColor="@color/colorWhite50"
        android:textSize="14dp" >
    </TextView>

    <TextView
        android:id="@+id/tvSettingsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dip"
        android:text="@string/settings"
        android:textColor="@color/colorWhite"
        android:textSize="20dp"
        android:textStyle="bold" >
    </TextView>

    <ScrollView
        android:id="@+id/scrollView"
        style="@style/whiteFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"
        android:padding="16dp" >

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/work_mode"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgModeSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rbtnCockpitMode1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cockpitMode1"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbtnCockpitMode2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cockpitMode2"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbtnCabinMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cabinMode"
                    android:textSize="16dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvTimePickingSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/tvTimePickingSettings"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgTimeSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rbtnTimeSelectionKeypad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvRegularPad"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbtnTimeSelectionFastpad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tvFastPad"
                    android:textSize="16dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/tvMiscellaneous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/Miscellaneous"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/cbPauseAfterService"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pauseAfterService" />

            <TextView
                android:id="@+id/tvPatternsToDisplay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/patterns_to_display"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPatternFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/show_list" />

            <TextView
                android:id="@+id/tvSettingsTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settingsTheme"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rgThemeSelection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <RadioButton
                    android:id="@+id/rbtnThemeAirbus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/airbus"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbtnThemeBoeing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boeing"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/rbtnThemeBoeingGrey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/boeing_grey"
                    android:textSize="16dp" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSettingsOK"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="@string/btnOK" />

</LinearLayout>