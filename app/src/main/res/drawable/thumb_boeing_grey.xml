<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- shadow -->
    <item
        android:left="1dp"
        android:right="1dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >
            <solid android:color="#20000000" />

            <size
                android:height="17dp"
                android:width="17dp" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="2dp"
        android:right="2dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >
            <solid android:color="#50000000" />

            <size
                android:height="16dp"
                android:width="16dp" />
        </shape>
    </item>

    <!-- button -->
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >
            <gradient
                android:angle="270"
                android:endColor="#ff888888"
                android:startColor="#ffdddddd" />

            <size
                android:height="16dp"
                android:width="16dp" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="2dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >
            <gradient
                android:angle="270"
                android:endColor="#ffeeeeee"
                android:startColor="#ffaaaaaa" />
        </shape>
    </item>
    <item
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="6dp">
        <shape
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="oval" >
            <solid android:color="#ffffffff" />

            <size
                android:height="4dp"
                android:width="4dp" />
        </shape>
    </item>

</layer-list>