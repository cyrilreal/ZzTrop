<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- button's plate -->

    <item
        android:bottom="2.5dp"
        android:left="2dp"
        android:right="2dp"
        android:top="1.5dp">
        <shape android:shape="rectangle" >
            <corners android:radius="4dp" />

            <solid android:color="#00000000" />

            <stroke
                android:width="1dp"
                android:color="#222222" />
        </shape>
    </item>
    <item
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp">
        <shape android:shape="rectangle" >
            <corners android:radius="4dp" />

            <gradient
                android:angle="270"
                android:endColor="#10000000"
                android:startColor="#10FFFFFF" />

            <stroke
                android:width="1dp"
                android:color="#eeeeee" />
        </shape>
    </item>

</layer-list>