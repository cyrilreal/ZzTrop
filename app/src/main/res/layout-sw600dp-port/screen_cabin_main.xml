<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="600dp"
    android:layout_gravity="center"
    android:background="@drawable/bevel_down"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tvHeader"
        android:textColor="@color/colorWhite50"
        android:textSize="14dp" >
    </TextView>

    <TextView
        android:id="@+id/tvBeforeLdgValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="@string/tvChoosePattern"
        android:textColor="@color/colorWhite"
        android:textSize="20dip" >
    </TextView>

    <ListView
        android:id="@+id/lv_patterns"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:id="@+id/linlayBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="88dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_grooved"
            android:text="@string/help"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvMode"
            android:layout_width="112dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:lines="1"
            android:text="@string/cabinMode"
            android:textColor="@color/colorWhite"
            android:textSize="16dp" />

        <Button
            android:id="@+id/btnSettings"
            android:layout_width="88dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_grooved"
            android:selectAllOnFocus="false"
            android:text="@string/settings"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>