<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="boeing" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBoeingBraun</item>
        <item name="android:buttonStyle">@style/cduButton</item>
        <item name="android:imageButtonStyle">@style/cduButton</item>
        <item name="android:editTextStyle">@style/boeingEditText</item>
        <item name="android:buttonStyleToggle">@style/boeingToggleButton</item>
        <item name="listViewBorder">@drawable/border_cdu_boeing</item>
        <item name="android:checkboxStyle">@style/boeingCheckBox</item>
        <item name="android:radioButtonStyle">@style/boeingRadioButton</item>
        <item name="android:alertDialogStyle">@style/boeingDialog</item>
        <item name="textViewLook">@drawable/textfield_boeing_normal</item>
        <item name="android:seekBarStyle">@style/seekbar_boeing</item>
        <item name="android:listViewStyle">@style/listview_boeing</item>
    </style>

    <style name="boeing_grey" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBoeingGrey</item>
        <item name="android:buttonStyle">@style/cduButton</item>
        <item name="android:imageButtonStyle">@style/cduButton</item>
        <item name="android:editTextStyle">@style/boeingGreyEditText</item>
        <item name="android:buttonStyleToggle">@style/boeingGreyToggleButton</item>
        <item name="listViewBorder">@drawable/border_cdu_boeing_grey</item>
        <item name="android:checkboxStyle">@style/boeingGreyCheckBox</item>
        <item name="android:radioButtonStyle">@style/boeingGreyRadioButton</item>
        <item name="android:alertDialogStyle">@style/boeingGreyDialog</item>
        <item name="textViewLook">@drawable/textfield_boeing_grey_normal</item>
        <item name="android:seekBarStyle">@style/seekbar_boeing_grey</item>
        <item name="android:listViewStyle">@style/listview_boeing_grey</item>

    </style>

    <style name="airbus" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorAirbusBlue</item>
        <item name="android:buttonStyle">@style/cduButton</item>
        <item name="android:imageButtonStyle">@style/cduButton</item>
        <item name="android:editTextStyle">@style/airbusEditText</item>
        <item name="android:buttonStyleToggle">@style/airbusToggleButton</item>
        <item name="listViewBorder">@drawable/border_cdu_airbus</item>
        <item name="android:checkboxStyle">@style/airbusCheckBox</item>
        <item name="android:radioButtonStyle">@style/airbusRadioButton</item>
        <item name="android:alertDialogStyle">@style/airbusDialog</item>
        <item name="textViewLook">@drawable/textfield_airbus_normal</item>
        <item name="dialogBackground">@drawable/dialog_background_airbus</item>
        <item name="android:seekBarStyle">@style/seekbar_airbus</item>
        <item name="android:listViewStyle">@style/listview_airbus</item>
    </style>

    <style name="boeingEditText">
        <item name="android:background">@drawable/textfield_boeing</item>
        <item name="android:textAppearance">@style/textDisplayAppearance</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="boeingGreyEditText">
        <item name="android:background">@drawable/textfield_boeing_grey</item>
        <item name="android:textAppearance">@style/textDisplayAppearance</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="airbusEditText">
        <item name="android:background">@drawable/textfield_airbus</item>
        <item name="android:textAppearance">@style/textDisplayAppearance</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="cduButton">
        <item name="android:background">@drawable/btn_cdu</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:height">52dp</item>
        <item name="android:width">60dp</item>
    </style>

    <style name="cduSpinner">
        <item name="android:background">@drawable/btn_cdu_dropdown</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="cduSpinnerItem20">
        <item name="android:textAppearance">@style/spinnerButtonTextAppearance20</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="cduSpinnerItem16">
        <item name="android:textAppearance">@style/spinnerButtonTextAppearance16</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="boeingDropDownItem">
        <item name="android:background">@color/colorBoeingBraun</item>
        <item name="android:textAppearance">@style/textDisplayAppearance</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="boeingGreyDropDownItem">
        <item name="android:background">@color/colorBoeingGrey</item>
        <item name="android:textAppearance">@style/textDisplayAppearance</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="airbusDropDownItem">
        <item name="android:background">@color/colorAirbusBlue</item>
        <item name="android:textAppearance">@style/textDisplayAppearance</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="boeingImageButton">
        <item name="android:background">@drawable/btn_cdu</item>
        <item name="android:gravity">center</item>
        <item name="android:height">52dp</item>
        <item name="android:width">60dp</item>
    </style>

    <style name="boeingToggleButton" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_boeing</item>
        <item name="android:gravity">center</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="boeingGreyToggleButton" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_boeing_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="airbusToggleButton" parent="android:Widget">
        <item name="android:background">@drawable/btn_toggle_airbus</item>
        <item name="android:gravity">center</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="airbusCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_airbus</item>
    </style>

    <style name="boeingCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_boeing</item>
    </style>

    <style name="boeingGreyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/btn_check_boeing_grey</item>
    </style>

    <style name="boeingRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_boeing</item>
    </style>

    <style name="boeingGreyRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_boeing_grey</item>
    </style>

    <style name="airbusRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/btn_radio_airbus</item>
    </style>

    <style name="whiteFrame">
        <item name="android:background">@drawable/border_white</item>
    </style>

    <style name="boeingDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@style/cduButton</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textViewLook">@drawable/textfield_boeing_normal</item>
    </style>

    <style name="boeingGreyDialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:buttonStyle">@style/cduButton</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textViewLook">@drawable/textfield_boeing_grey_normal</item>
    </style>

    <style name="airbusDialog" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:buttonStyle">@style/cduButton</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="textViewLook">@drawable/textfield_airbus_normal</item>
    </style>

    <style name="textDisplayAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="spinnerButtonTextAppearance20">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="spinnerButtonTextAppearance16">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="seekbar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:minHeight">4dp</item>
        <item name="android:maxHeight">20dp</item>
        <item name="android:thumbOffset">0dp</item>
    </style>

    <style name="seekbar_boeing" parent="@style/seekbar">
        <item name="android:progressDrawable">@drawable/seekbar_boeing</item>
        <item name="android:thumb">@drawable/thumb_boeing</item>
    </style>

    <style name="seekbar_boeing_grey" parent="@style/seekbar">
        <item name="android:progressDrawable">@drawable/seekbar_boeing_grey</item>
        <item name="android:thumb">@drawable/thumb_boeing_grey</item>
    </style>

    <style name="seekbar_airbus" parent="@style/seekbar">
        <item name="android:progressDrawable">@drawable/seekbar_airbus</item>
        <item name="android:thumb">@drawable/thumb_boeing</item>
    </style>

    <style name="listview_airbus" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/border_cdu_airbus</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="listview_boeing" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/border_cdu_boeing</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="listview_boeing_grey" parent="@android:style/Widget.ListView">
        <item name="android:background">@drawable/border_cdu_boeing_grey</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">2dp</item>
    </style>


</resources>